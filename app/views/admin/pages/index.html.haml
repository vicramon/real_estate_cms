.create_new
  = link_to "Add a Page", [:new, :admin, :page]

%table
  %tr
    %th Name
    %th
    %th
  - pages.each do |page|
    %tr
      %td= page.name
      %td= link_to "edit", edit_admin_page_path(page)
      %td= link_to "delete", [:admin, page], method: :delete, class: 'delete',
        data: { confirm: 'Are you sure you want to delete this page?' }
