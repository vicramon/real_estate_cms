%article#login
  %h2 Login

  - if flash[:alert]
    .alert= flash[:alert]

  = form_tag sessions_path do

    %dl
      %dt= label_tag :email, "Email:"
      %dd= text_field_tag :email

    %dl
      %dt= label_tag :password, "Password:"
      %dd= password_field_tag :password

    %dl
      %dt
      %dd= submit_tag "Sign In"
